# Core Configuration
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/decentralized-storage
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Blockchain
ETHEREUM_RPC_URL=http://localhost:8545
ETHEREUM_PRIVATE_KEY=your_private_key_here
ETHEREUM_NETWORK=localhost
INFURA_API_KEY=your_infura_api_key_here

# IPFS
IPFS_NODE_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_api_key_here

# Storage
MAX_FILE_SIZE=100000000 # 100MB
ALLOWED_FILE_TYPES=image/*,video/*,application/pdf,text/plain
STORAGE_PROVIDER_MIN_REPUTATION=0.8

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=debug

# API Keys (Optional)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Client Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_IPFS_GATEWAY=https://ipfs.io/ipfs/
REACT_APP_ETHEREUM_RPC_URL=http://localhost:8545

# Mobile Configuration
REACT_NATIVE_API_URL=http://localhost:5000
REACT_NATIVE_IPFS_GATEWAY=https://ipfs.io/ipfs/
REACT_NATIVE_ETHEREUM_RPC_URL=http://localhost:8545

# Gas Reporter
REPORT_GAS=true 